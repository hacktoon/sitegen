<command-list> := <command> *
<command> :=   <childlist-stmt>
			|  <pagelist-stmt>
			|  <print-stmt>
			|  <include-stmt>
			|  <parse-stmt>
			|  <if-stmt>
			|  <html>

<parse-stmt> := "#parse(" <string> ")"
<include-stmt> := "#include(" <string> ")"
<print-stmt> := "#put(" <identifier> [, <args> ] ")"
<pagelist-stmt> := "#pagelist(" <args> ")" <command-list> #end
<childlist-stmt> := "#childlist(" <args> ")" <command-list> #end

<if-stmt> : = "if(" <cond-expr> ) <command-list> 
			   [ "#else" <command-list> | ( "#elseif(" <cond-expr> ")" <command-list> )* ] #end


<cond-expr> := <identifier> <logic-op> <literal>
<args> := <identifier> "=" <literal> (, <identifier> "=" <literal>)*

<logic-op> := "==" | "!="

<literal> := <string> | <number> | "null"
<string> := '"' <letter>* '"'
<number> := <digit>+
<identifier> := <letter> (<number> | <letter>)*
